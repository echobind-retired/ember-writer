<div class="posts">
  {{#each model as |post|}}
    <article class={{post.slug}}>
      <h3 class="post-title">
        {{#link-to 'blog.post' post}}
          {{post.title}}
        {{/link-to}}
      </h3>

      <div class="post-summary">
        {{{post.summary}}}
      </div>

    </article>
  {{/each}}
</div>
