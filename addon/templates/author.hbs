<article>
  <h3>Author: {{model.name}}</h3>

  {{article-content content=model.body}}

  {{#each model.posts as |post|}}
    <article class={{post.slug}}>
      <h3 class="post-title">
        {{#link-to 'post' post}}
          {{post.title}}
        {{/link-to}}
      </h3>

      <div class="post-summary">
        {{html-safe post.summary}}
      </div>
    </article>
  {{/each}}
</article>
