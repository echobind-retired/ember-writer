<div class="posts">
  {{#each model as |post|}}
    <article class={{post.slug}}>
      <h3 class="post-title">
        {{#link-to 'post' post}}
          {{post.attributes.title}}
        {{/link-to}}
      </h3>

      <div class="post-summary">
        {{html-safe post.summary}}
      </div>

      {{article-info article=post}}
    </article>
  {{/each}}
</div>
